<div id="pins" class= "transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= image_tag pin.image.url (:medium) %>
      <div class= "panel-body">
        <%= pin.description %>
        <%= pin.user.email if pin.user %>
        <%= link_to 'Show', pin %>
        <% if pin.user == current_user %>
          <%= link_to 'Edit', edit_pin_path(pin) %>
          <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %><a href="http://image.s7.exacttarget.com/lib/fe9313727561007c7c/m/1/header_products.jpg" title="None"></a>
        <% end %>
    </div>
    </div>
  <% end %>
</div>

